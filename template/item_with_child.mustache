<li class="section">
    <input type="checkbox" id="{{uniqId}}" checked>
    <label for="{{uniqId}}">
    <div class="depinfo">
        <a>
            <div class="name" id="{{name}}">
                {{name}}
            </div>
        </a>
        <div class="depinfo">
            {{#location}}
                Местонахождение:
                <div class="label">
                    {{location}}
                </div>
            {{/location}}
            Контактная информация:
            {{#phone}}
                <div class="label">
                    {{phone}}
                </div>
            {{/phone}}
            {{#email}}
                <div class="label">
                    <a href="mailto:{{email}}" class="no-link">{{email}}</a>
                </div>
            {{/email}}
        </div>
    </div>
    {{#manager}}
        <div class="manager">
            {{name}},
        </div>
        <div class="managerjob">
            {{position}}
        </div>
        {{#add_info}}
            <div class="managerjob">
                ({{add_info}})
            </div>
        {{/add_info}}
        <div class="info">
            {{#location}}
                <div class="label">
                    {{location}}
                </div>
            {{/location}}
            {{#phone}}
                <div class="label">
                    {{phone}}
                </div>
            {{/phone}}
            {{#email}}
                <div class="label">
                    <a href="mailto:{{email}}" class="no-link">{{email}}</a>
                </div>
            {{/email}}
        </div>
    {{/manager}}
    {{#employees}}
        <div class="employee">
            {{name}},
        </div>
        <div class="employeejob">
            {{position}}
        </div>
        {{#add_info}}
            <div class="employeejob">
                ({{add_info}})
            </div>
        {{/add_info}}
        <div class="info_employee">
            {{#location}}
                <div class="label">
                    {{location}}
                </div>
            {{/location}}
            {{#phone}}
                <div class="label">
                    {{phone}}
                </div>
            {{/phone}}
            {{#email}}
                <div class="label">
                    <a href="mailto:{{email}}" class="no-link">{{email}}</a>
                </div>
            {{/email}}
        </div>
    {{/employees}}
    </label>
    {{#childs}}
        <ul>
            {{{childs}}}
        </ul>
    {{/childs}}
</li>